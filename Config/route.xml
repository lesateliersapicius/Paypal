<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="paypal.configure" path="/admin/module/paypal/configure" methods="post">
        <default key="_controller">PayPal\Controller\ConfigurationController::configureAction</default>
    </route>
    <route id="paypal.module.configure" path="/admin/module/paypal/configure" methods="get">
        <default key="_controller">PayPal\Controller\ConfigurationController::renderConfigureAction</default>
    </route>

    <route id="paypal.admin.configuration.log" path="/admin/module/paypal/configure/log" methods="get">
        <default key="_controller">PayPal\Controller\ConfigurationController::logAction</default>
    </route>

    <route id="paypal.admin.configuration.general" path="/admin/module/paypal/configure" methods="post">
        <default key="_controller">PayPal\Controller\ConfigurationController::configureAction</default>
    </route>

    <route id="paypal.admin.configuration.planified" path="/admin/module/paypal/configure/planified" methods="get">
        <default key="_controller">PayPal\Controller\PayPalPlanifiedPaymentController::defaultAction</default>
    </route>

    <route id="paypal.admin.configuration.planified.create" path="/admin/module/paypal/configure/planified/create" methods="post">
        <default key="_controller">PayPal\Controller\PayPalPlanifiedPaymentController::createAction</default>
    </route>

    <route id="paypal.admin.configuration.planified.delete" path="/admin/module/paypal/configure/planified/create/delete" methods="post">
        <default key="_controller">PayPal\Controller\PayPalPlanifiedPaymentController::deleteAction</default>
    </route>

    <route id="paypal.admin.configuration.planified.update" path="/admin/module/paypal/configure/planified/{planifiedPaymentId}" methods="get">
        <default key="_controller">PayPal\Controller\PayPalPlanifiedPaymentController::updateAction</default>
        <requirement key="planifiedPaymentId">\d+</requirement>
    </route>

    <route id="paypal.admin.configuration.planified.save" path="/admin/module/paypal/configure/planified/{planifiedPaymentId}" methods="post">
        <default key="_controller">PayPal\Controller\PayPalPlanifiedPaymentController::processUpdateAction</default>
        <requirement key="planifiedPaymentId">\d+</requirement>
    </route>

    <route id="paypal.cancel" path="/module/paypal/cancel/{orderId}" methods="get">
        <default key="_controller">PayPal\Controller\PayPalResponseController::cancelAction</default>
        <requirement key="orderId">\d+</requirement>
    </route>

    <route id="paypal.ok" path="/module/paypal/ok/{orderId}" methods="get">
        <default key="_controller">PayPal\Controller\PayPalResponseController::okAction</default>
        <requirement key="orderId">\d+</requirement>
    </route>

    <route id="paypal.express.checkout" path="/module/paypal/express/checkout">
        <default key="_controller">PayPal\Controller\PayPalResponseController::expressCheckoutAction</default>
    </route>

    <route id="paypal.express.checkout.ok" path="/module/paypal/express/checkout/ok/{cartId}">
        <default key="_controller">PayPal\Controller\PayPalResponseController::expressCheckoutOkAction</default>
        <requirement key="cartId">\d+</requirement>
    </route>

    <route id="paypal.express.checkout.ko" path="/module/paypal/express/checkout/ko/{cartId}">
        <default key="_controller">PayPal\Controller\PayPalResponseController::expressCheckoutKoAction</default>
        <requirement key="cartId">\d+</requirement>
    </route>

    <route id="paypal.invoice.express.checkout" path="/module/paypal/invoice/express/checkout">
        <default key="_controller">PayPal\Controller\PayPalResponseController::invoiceExpressCheckoutAction</default>
    </route>

    <route id="paypal.invoice.express.checkout.ok" path="/module/paypal/invoice/express/checkout/ok/{cartId}">
        <default key="_controller">PayPal\Controller\PayPalResponseController::invoiceExpressCheckoutOkAction</default>
        <requirement key="cartId">\d+</requirement>
    </route>

    <route id="paypal.invoice.express.checkout.ko" path="/module/paypal/invoice/express/checkout/ko/{cartId}">
        <default key="_controller">PayPal\Controller\PayPalResponseController::invoiceExpressCheckoutKoAction</default>
        <requirement key="cartId">\d+</requirement>
    </route>

    <!-- OVERLOAD order management process -->
    <route id="order.delivery.process" path="/order/delivery" methods="post">
        <default key="_controller">PayPal\Controller\PayPalResponseController::executeExpressCheckoutAction</default>
        <default key="_view">order-deliveryAction</default>
    </route>

    <route id="paypal.login.ok" path="/module/paypal/login/ok" methods="get">
        <default key="_controller">PayPal\Controller\PayPalResponseController::loginOkAction</default>
    </route>

    <route id="paypal.agreement.ok" path="/module/paypal/agreement/ok/{orderId}" methods="get">
        <default key="_controller">PayPal\Controller\PayPalResponseController::agreementOkAction</default>
        <requirement key="orderId">\d+</requirement>
    </route>

    <route id="paypal.ipn" path="/module/paypal/ipn/{orderId}">
        <default key="_controller">PayPal\Controller\PayPalResponseController::ipnAction</default>
        <requirement key="orderId">\d+</requirement>
    </route>

    <route id="paypal.webhook.all" path="/module/paypal/webhook/all/events">
        <default key="_controller">PayPal:PayPalWebHook:allAction</default>
    </route>

</routes>
